{
  "name": "idai-field-client",
  "description": "iDAI.field 2 Client",
  "main": "main.js",
  "version": "2.4.3",
  "license": "Apache-2.0",
  "author": "German Archaeological Institute",
  "scripts": {
    "prebuild": "rimraf css/* && rimraf src/* && rimraf fonts/*",
    "build": "gulp copy-fonts-convert-sass && tsc -p app/tsconfig.json && tsc -p test/tsconfig.json",
    "clean": "git clean -xdf app test",
    "convert-sass": "gulp convert-sass",
    "start": "electron . dev",
    "jasmine": "jasmine JASMINE_CONFIG_PATH=test/unit/config/jasmine.json",
    "karma": "karma start test/subsystem/config/karma.conf.js",
    "test": "npm run jasmine && npm run karma",
    "pree2e": "rimraf test/e2e-screenshots/*.png",
    "e2e": "node test/e2e/spectron.js",
    "package": "build -mw --publish never",
    "package-mac": "build -m dmg --publish never",
    "package-win": "build -w nsis --publish never"
  },
  "build": {
    "appId": "org.dainst.idai-field-client",
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": "zip",
      "icon": "img/logo.icns",
      "artifactName": "iDAI.field-client-${version}-MacOS.${ext}"
    },
    "win": {
      "target": "zip",
      "icon": "img/logo.ico",
      "artifactName": "iDAI.field-client-${version}-Windows.${ext}"
    },
    "npmRebuild": false,
    "extraResources": [
      "config",
      "test/test-data/imagestore-samples"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scuy/idai-field.git"
  },
  "dependencies": {
    "@angular/common": "4.2.2",
    "@angular/compiler": "4.2.2",
    "@angular/core": "4.2.2",
    "@angular/forms": "4.2.2",
    "@angular/http": "4.2.2",
    "@angular/platform-browser": "4.2.2",
    "@angular/platform-browser-dynamic": "4.2.2",
    "@angular/router": "4.2.2",
    "@mdi/font": "2.5.94",
    "@ng-bootstrap/ng-bootstrap": "1.0.0",
    "Leaflet.vector-markers": "0.0.6",
    "angular2-uuid": "1.1.0",
    "bootstrap": "4.0.0-beta",
    "es6-shim": "0.35.0",
    "express": "4.15.0",
    "express-pouchdb-dainst": "1000.0.3",
    "idai-components-2": "1.19.16",
    "ip": "1.1.5",
    "leaflet": "1.2.0",
    "leaflet-imageoverlay-rotated": "0.1.1",
    "leaflet.pm": "0.17.3",
    "levelup": "^1.3.5",
    "memorystream": "^0.3.1",
    "moment": "2.21.0",
    "papaparse": "~4.1.4",
    "pouchdb": "^6.3.4",
    "pouchdb-load": "^1.4.6",
    "pouchdb-replication-stream": "^1.2.9",
    "pouchdb-server": "^2.3.6",
    "reflect-metadata": "0.1.8",
    "roboto-fontface": "0.6.0",
    "rxjs": "5.0.1",
    "svg-pan-zoom": "3.5.3",
    "systemjs": "0.19.31",
    "tsfun": "1.16.10",
    "update-electron-app": "^1.3.0",
    "viz.js": "1.8.1",
    "zone.js": "0.8.11"
  },
  "devDependencies": {
    "electron": "1.8.4",
    "@types/geojson": "0.0.32",
    "@types/jasmine": "~2.5.41",
    "@types/leaflet": "1.0.66",
    "@types/leaflet-imageoverlay-rotated": "0.1.0",
    "@types/leaflet.pm": "0.13.0",
    "@types/node": "7.0.3",
    "@types/papaparse": "4.1.28",
    "@types/pouchdb": "~6.1.1",
    "electron-builder": "19.53.2",
    "electron-packager": "8.4.0",
    "electron-rebuild": "^1.5.7",
    "file-api": "0.10.4",
    "file-url": "^2.0.2",
    "gulp": "3.9.0",
    "gulp-concat": "2.6.0",
    "gulp-sass": "3.1.0",
    "gulp-webserver": "0.9.1",
    "jasmine": "2.5.2",
    "jasmine-core": "2.5.2",
    "karma": "1.4.0",
    "karma-electron-launcher": "^0.2.0",
    "karma-jasmine": "1.1.0",
    "pouchdb-adapter-memory": "^6.3.4",
    "protractor": "5.1.2",
    "protractor-console-plugin": "0.1.1",
    "protractor-fail-fast": "2.0.0",
    "rimraf": "2.5.4",
    "spectron": "^3.7.2",
    "typescript": "2.3.1",
    "yargs": "5.0.0"
  }
}
